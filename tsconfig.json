{
  "compilerOptions": {
    "baseUrl": ".", // Sets the base directory to the current directory
    "typeRoots": ["./node_modules/@types", "./src/types"], // Specifies the locations of type definition files
    "lib": ["dom", "dom.iterable", "esnext"], // Specifies the library files to be included in the compilation
    "allowJs": true, // Allows JavaScript files to be compiled
    "skipLibCheck": true, // Skips type checking of declaration files
    "strict": true, // Enables all strict type-checking options
    "noEmit": true, // Does not emit output files (since you're not emitting JavaScript)
    "esModuleInterop": true, // Allows importing CommonJS modules as ES Modules
    "module": "esnext", // Specifies the module code generation method
    "moduleResolution": "bundler", // Specifies the module resolution strategy
    "resolveJsonModule": true, // Allows importing JSON files as modules
    "isolatedModules": true, // Enables emitting files for each input file separately
    "jsx": "preserve", // Specifies how JSX should be transformed
    "incremental": true, // Enables incremental compilation
    "plugins": [ // Specifies TypeScript plugins (in this case, the "next" plugin)
      {
        "name": "next"
      }
    ],
    "paths": { // Specifies path mappings for module resolution
      "@/*": ["./*"] // Maps imports starting with "@" to the current directory
    }
  },
  "include": [ // Specifies files to be included in the compilation
    "next-env.d.ts", // TypeScript declaration file for Next.js environment
    "**/*.ts", // Include TypeScript files
    "**/*.tsx", // Include TypeScript JSX files
    ".next/types/**/*.ts" // Include TypeScript declaration files generated by Next.js
  ],
  "exclude": [ // Specifies files to be excluded from the compilation
    "path/to/commented_out_file.tsx" // Example of excluding a specific file
  ]
}
